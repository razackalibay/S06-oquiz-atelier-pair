<!--  Include headers here -->
<%- include('partials/head') %>

  <h1 class="text-center m-2"><%= quiz.title %></h1>

  <h2 class="text-center m-2">description: <%= quiz.description %>></h1>

  <h2 class="small text-end">Par <%= quiz.author.firstname %> <%= quiz.author.lastname %></h2>

  <h2 class="small text-end">Date de création : <%= quiz.created_at %></h2>

  <h3>Thèmes</h3>
  <ul class="mb-4 p-0">
    <% for (const tag of quiz.tags) { %>

    <li class="badge bg-primary"><%= tag.name %></li>

    <% }%>
  </ul>

  <h3>Questions</h3>

  <% for (const thisQuiz of quiz.questions) { %>

    <span class="badge bg-info"><%= thisQuiz.level.name %></span>

    <p class="fw-bold mb-1"><%= thisQuiz.description %></p>
    <div class="mb-3 ms-2">

      <% for ( const answer of thisQuiz.answers) { %>
      <div>
        <input type="radio" id="<%= answer.answer_id%>" name="<%= thisQuiz.id %>" value="<%= %>">
        <label for="#"><%= answer.description %></label>
      </div>
<% }; %>
    </div>
    <p class="fst-italic text-secondary"><%= thisQuiz.anecdote %></p>

    <% } %>

  <button class="d-block mx-auto btn btn-primary mb-4">Envoyer</button>

<%- include('partials/footer') %>